<div id="accounts">
  <h2>Eve Accounts</h2>
  <ul>
    <% @accounts.each do |account| %>
    <li><%= link_to account.id, account %>
      <span id="character_names"><%=h account.characters.map{|x| x.name}.join(", ") %></span>
      <span>[<%= link_to 'Remove', account, :confirm => 'Are you sure?', :method => :delete %>]</span></li>
    <% end -%>
  </ul>
  <p><%= link_to "Add an account", new_account_path %></p>
</div>

<% @accounts.each do |account| %>
  <tr>
    <td><%=h account.id %></td>
    <td><%=h account.full_api_key %></td>
    <td><%= link_to 'Show', account %></td>
    <td><%= link_to 'Edit', edit_account_path(account) %></td>
    <td><%= link_to 'Destroy', account, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
