<h1>Editing account</h1>

<% form_for(@account) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :id %><br />
    <%= f.text_field :id, {:size => 8} %>
  </p>
  <p>
    <%= f.label :full_api_key %><br />
    <%= f.text_field :full_api_key, {:size => 65} %>
  </p>
  <p>
    <%= f.submit 'Update' %> | 
    <%= link_to 'Cancel', home_path %> | 
    <%= link_to 'Remove', @account, :confirm => 'Are you sure?', :method => :delete %>
  </p>
<% end %>

