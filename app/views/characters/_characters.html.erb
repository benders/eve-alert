<div id="characters">
  <h2>Characters</h2>
  <ul>
    <% characters.each do |character| %>
    <li>
      <%= image_tag "http://img.eve.is/serv.asp?s=64&amp;c=#{character.id}", 
        :width => 64, :height => 64, :alt => character.name, :class => "character_portrait" %>
      <%#= check_box_tag "#{character.id}[enabled]", 1, true %>
      <span class="character_name"><%= character.name %></span>
      <span class="corporation">(<%=h character.corporation_name %>)</span>
    </li>
    <% end -%>
  </ul>
</div>
